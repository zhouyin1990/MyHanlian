<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hanlian.Activity.LoginActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_passname"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_img_denglu"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/ed_shuruyzm"
            android:layout_alignRight="@+id/btn_getyzm"
            android:layout_below="@+id/ed_shuruyzm"
            android:layout_marginTop="30dp"
            android:background="#FB6668"
            android:text="登录"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/ed_phNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ed_password"
            android:layout_alignRight="@+id/ed_password"
            android:layout_below="@+id/ed_password"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="请输入手机号码"
            android:inputType="number" />

        <EditText
            android:id="@+id/ed_shuruyzm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ed_phNum"
            android:layout_below="@+id/ed_phNum"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/btn_getyzm"
            android:ems="10"
            android:hint="请输入验证码"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_getyzm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ed_shuruyzm"
            android:layout_alignBottom="@+id/ed_shuruyzm"
            android:layout_alignRight="@+id/ed_phNum"
            android:layout_marginTop="18dp"
            android:background="#FB6668"
            android:text="获取验证码"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/ed_passname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ed_password"
            android:layout_alignRight="@+id/ed_password"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/ic_img_denglu"
            android:ems="10"
            android:hint="请输入账号"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/btn_login"
            android:text="服务热线："
            android:textSize="20dp"
            android:layout_alignTop="@+id/textView2"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="19dp"
            android:src="@drawable/login_logo"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_getyzm"
            android:layout_toStartOf="@+id/btn_getyzm"
            android:layout_marginEnd="19dp"/>

        <TextView
            android:id="@+id/tv_wangjimima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn_login"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="11dp"
            android:text="忘记用户名和密码？"
            android:textColor="#FB6668"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="0576—88275333"
            android:textSize="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/tv_wangjimima"
            android:layout_toRightOf="@+id/textView1"
            android:layout_toEndOf="@+id/textView1"/>

    </RelativeLayout>

</RelativeLayout>
