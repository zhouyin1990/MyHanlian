<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- android:textColor="#ff0000" -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_colletion_item"
        android:layout_alignLeft="@+id/tv_colltion_tvtitle"
        android:text="¥"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/tv_colltion_shoujia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="20"
        android:textColor="#ff0000" />

    <ImageView
        android:id="@+id/img_colletion_item"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_colltion_tvtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_colletion_item"
        android:layout_toRightOf="@+id/img_colletion_item"
        android:maxLines="2"
        android:text="标题  " />

</RelativeLayout>