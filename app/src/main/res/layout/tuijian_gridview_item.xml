<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:id="@+id/img_tuijian_gv_item"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"  
        android:scaleType="fitXY"
        android:src="@drawable/new_banner" />

        <TextView
            android:id="@+id/tv_tuijian_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_tuijian_gv_item"
            android:layout_below="@+id/img_tuijian_gv_item"
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:text="标题" />

        <TextView
            android:id="@+id/tv_tuijian_shoujiatitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_tuijian_shoujia"
            android:layout_alignBottom="@+id/tv_tuijian_shoujia"
            android:layout_alignLeft="@+id/tv_tuijian_title"
            android:text="¥"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/tv_tuijian_shoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tuijian_title"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/tv_tuijian_shoujiatitle"
            android:text="22"
            android:textColor="#ff0000" />

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tv_tuijian_shoujia"
            android:layout_alignRight="@+id/img_tuijian_gv_item"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_bg_yuan2" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="兑换"
                android:textColor="#ff0000" />
        </RelativeLayout>

</RelativeLayout>
