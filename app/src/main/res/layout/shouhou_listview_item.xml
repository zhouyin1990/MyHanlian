<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_dingdanbianhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="订单编号：" />

    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_dingdanbianhao"
        android:layout_below="@+id/tv_dingdanbianhao"
        android:text="下单时间：" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_order_time"
        android:background="#F8F8F8" >

        <ImageView
            android:id="@+id/img_shouhou"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@drawable/moren" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_shouhou"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/img_shouhou"
            android:text="标题" />

        <TextView
            android:id="@+id/tv_salenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_shouhou"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_marginBottom="14dp"
            android:text="数量  X1" />

        <Button
            android:id="@+id/btn_sqshouhou"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_salenumber"
            android:layout_alignBottom="@+id/tv_salenumber"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/btn_red_stroke"
            android:text="申请售后"
            android:textColor="#FF0000" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_order_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="状态 "
        android:textColor="@color/red" />

</RelativeLayout>